generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(RECEPTIONIST)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members   Member[] @relation("UserMembers")
}

model Member {
  id          String   @id @default(cuid())
  fullName    String
  phone       String
  startDate   DateTime
  endDate     DateTime
  plan        Plan     @relation(fields: [planId], references: [id])
  planId      String
  createdBy   User     @relation(fields: [createdById], references: [id], name: "UserMembers")
  createdById String
  payments    Payment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Plan {
  id               String   @id @default(cuid())
  name             String
  durationInMonths Int
  price            Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  members          Member[]
}

model Payment {
  id        String   @id @default(cuid())
  member    Member   @relation(fields: [memberId], references: [id])
  memberId  String
  amount    Float
  paidAt    DateTime @default(now())
  nextDue   DateTime?
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  RECEPTIONIST
}
